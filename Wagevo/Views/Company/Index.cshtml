@{
    ViewData["Title"] = "Company View";
}

<div class="text-center">
    <h1 class="display-4">Wagevo</h1>
    <p>Comapny: @ViewBag.Company.Name</p>
    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Hourly Wage</th>
        </tr>
        </thead>
        <tbody>
        @foreach (User employee in ViewBag.Employees)
        {
            <tr>
                <td>@employee.FirstName @employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.HourlyWage.ToString("C")</td> <!-- Formats as currency -->
            </tr>
        }
        </tbody>
    </table>
</div>