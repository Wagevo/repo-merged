@{
    ViewData["Title"] = "Company View";
}
<script src="~/js/Company/Index.js"></script>

<div class="text-center">
    <h1 class="display-4">Wagevo</h1>
    <p>Company: @ViewBag.Company.Name</p>
    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Hourly Wage</th>
            <th>Phone Number</th>
        </tr>
        </thead>
        <tbody>
        @foreach (User employee in ViewBag.Employees)
        { 
            <tr class="employee-row" data-id="@employee.UserId" style="cursor: pointer;">
                <td>@employee.FirstName @employee.LastName</td>
                <td>@employee.Email</td>
                <td>@employee.HourlyWage</td>
                <td>@employee.PhoneNumber</td>
            </tr>
        }
        </tbody>
    </table>
</div>